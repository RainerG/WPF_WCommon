<Window x:Class="Shared.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shared"
             mc:Ignorable="d" 
             Title="About" Height="Auto" Width="180"
             MaxHeight="300" MaxWidth="200" >
    
    <StackPanel Margin="10,10,10,10">
        <Label TextBlock.BaselineOffset="20"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               FontSize="10"
               FontWeight="Bold"
               Content="Author: Rainer Gerlach" />

        <Label TextBlock.BaselineOffset="40"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               FontSize="10"
               FontWeight="Bold">
               <TextBlock>
                 <Run Text="Release: "/>
                 <Run Text="{Binding m_Vers, RelativeSource={RelativeSource AncestorType=Window}}"/>
               </TextBlock>
        </Label>

        <Label TextBlock.BaselineOffset="40"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               FontSize="10"
               FontWeight="Bold"
               Content="Built: " />
    </StackPanel>
</Window>
